load("@npm//@bazel/concatjs:index.bzl", "ts_config")
load("//tools:tfjs_web_test.bzl", "grep_flag", "headless_flag")

package(default_visibility = ["//visibility:public"])

exports_files([
    "babel.config.json",
    "tsconfig.json",
    "tsconfig_es5.json",
    "tsconfig.test.json",
    "tsconfig_base.json",
    "tsconfig_ts_library.json",
])

