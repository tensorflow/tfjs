    name = "grep",
    build_setting_default = "",
    visibility = ["//visibility:public"],
)

headless_flag(
    name = "headless",
    build_setting_default = True,
    visibility = ["//visibility:public"],
)

test_suite(
    name = "tests",
    tests = [
        "//tfjs-backend-cpu:tests",
        "//tfjs-backend-wasm:tests",
        "//tfjs-backend-webgl:tests",
        "//tfjs-converter:tests",
        "//tfjs-core:tests",
        "//tfjs-data:tests",
        "//tfjs-layers:tests",
        "//tfjs-tfdf:tests",
        "//tfjs-tflite:tests",
    ],
)
